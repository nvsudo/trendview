<div class="bg-container rounded-2xl border border-border p-6" data-controller="drag-drop" data-drag-drop-move-url-value="<%= move_to_section_position_path(':id') %>" data-drag-drop-csrf-token-value="<%= form_authenticity_token %>">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-semibold text-primary">Holdings</h2>
    <button class="text-sm text-secondary hover:text-primary">
      <svg class="w-5 h-5" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
    </button>
  </div>

  <% if @holdings_by_section.any? %>
    <% @holdings_by_section.each do |section| %>
      <div class="mb-6 last:mb-0 section-drop-zone" data-section-id="<%= section.id %>">
        <!-- Section Header -->
        <div class="flex items-center justify-between mb-3">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full" style="background-color: <%= section.color %>"></div>
            <h3 class="font-medium text-primary"><%= section.name %></h3>
            <span class="text-sm text-secondary">(<%= section.positions.count %>)</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-sm text-secondary">
              â‚¹<%= number_with_delimiter(section.positions.sum(&:current_value)) %>
            </span>
            <button class="text-secondary hover:text-primary">
              <svg class="w-4 h-4" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Positions Table -->
        <% if section.positions.any? %>
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead>
                <tr class="border-b border-border">
                  <th class="text-left py-2 font-medium text-secondary">Symbol</th>
                  <th class="text-right py-2 font-medium text-secondary">Qty</th>
                  <th class="text-right py-2 font-medium text-secondary">LTP</th>
                  <th class="text-right py-2 font-medium text-secondary">P&L</th>
                  <th class="text-right py-2 font-medium text-secondary">%</th>
                </tr>
              </thead>
              <tbody>
                <% section.positions.each do |position| %>
                  <tr class="border-b border-border hover:bg-gray-50 cursor-pointer" 
                      draggable="true" 
                      data-position-id="<%= position.id %>"
                      data-section-id="<%= section.id %>">
                    <td class="py-3">
                      <div class="font-medium text-primary"><%= position.security.symbol %></div>
                      <div class="text-xs text-secondary"><%= position.security.name %></div>
                    </td>
                    <td class="text-right py-3 text-primary"><%= position.quantity %></td>
                    <td class="text-right py-3 text-primary">â‚¹<%= number_with_delimiter(position.security.last_price) %></td>
                    <td class="text-right py-3 <%= position.unrealized_pnl >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      â‚¹<%= number_with_delimiter(position.unrealized_pnl) %>
                    </td>
                    <td class="text-right py-3 <%= position.unrealized_pnl >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= position.unrealized_pnl_percent.round(2) %>%
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8 text-secondary">
            <div class="text-4xl mb-2">ðŸ“Š</div>
            <p>No positions in this section</p>
            <p class="text-sm">Drag positions here to organize your holdings</p>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="text-6xl mb-4">ðŸ“ˆ</div>
      <h3 class="text-lg font-medium text-primary mb-2">No Holdings Yet</h3>
      <p class="text-secondary mb-6">Start building your portfolio by adding your first position</p>
      <button class="bg-primary text-white px-6 py-2 rounded-lg hover:bg-primary-dark transition-colors">
        Add Position
      </button>
    </div>
  <% end %>
</div>
