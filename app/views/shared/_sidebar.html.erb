<!-- Sidebar Navigation -->
<div
  data-controller="sidebar"
  data-sidebar-open-value="false"
  class="relative z-50"
>
  <!-- Overlay (mobile only) -->
  <div
    data-sidebar-target="overlay"
    data-action="click->sidebar#close"
    class="fixed inset-0 bg-black/50 lg:hidden hidden"
  ></div>

  <!-- Sidebar -->
  <aside
    data-sidebar-target="sidebar"
    class="fixed left-0 top-0 h-full w-64 bg-container border-r border-border transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out flex flex-col"
  >
    <!-- Sidebar Header -->
    <div class="flex items-center justify-between p-6 border-b border-border">
      <div class="flex items-center gap-2">
        <span class="text-2xl">ðŸ”¥</span>
        <span class="text-xl font-bold text-primary">Ignition</span>
      </div>
      <!-- Close button (mobile only) -->
      <button
        data-action="click->sidebar#close"
        class="lg:hidden text-secondary hover:text-primary"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Navigation Links -->
    <nav class="flex-1 p-4 space-y-1">
      <%= link_to root_path,
          class: "flex items-center gap-3 px-4 py-3 rounded-lg text-secondary hover:text-primary hover:bg-gray-100 transition-colors #{current_page?(root_path) ? 'bg-gray-100 text-primary font-medium' : ''}" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        <span>Dashboard</span>
      <% end %>

      <%= link_to trades_path,
          class: "flex items-center gap-3 px-4 py-3 rounded-lg text-secondary hover:text-primary hover:bg-gray-100 transition-colors #{current_page?(trades_path) ? 'bg-gray-100 text-primary font-medium' : ''}" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        <span>Trades</span>
      <% end %>

      <%= link_to "/portfolio",
          class: "flex items-center gap-3 px-4 py-3 rounded-lg text-secondary hover:text-primary hover:bg-gray-100 transition-colors #{current_page?("/portfolio") ? 'bg-gray-100 text-primary font-medium' : ''}" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        <span>Portfolio</span>
      <% end %>

      <%= link_to "/analytics",
          class: "flex items-center gap-3 px-4 py-3 rounded-lg text-secondary hover:text-primary hover:bg-gray-100 transition-colors #{current_page?("/analytics") ? 'bg-gray-100 text-primary font-medium' : ''}" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        <span>Analytics</span>
      <% end %>
    </nav>

    <!-- User Account Section -->
    <div class="p-4 border-t border-border">
      <div class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-100 cursor-pointer">
        <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white font-semibold">
          <%= current_user.initials %>
        </div>
        <div class="flex-1 min-w-0">
          <div class="text-sm font-medium text-primary truncate">
            <%= current_user.display_name %>
          </div>
          <div class="text-xs text-secondary truncate">
            <%= current_user.email %>
          </div>
        </div>
        <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
      </div>

      <!-- User menu dropdown (can be expanded later) -->
      <%= button_to logout_path, method: :delete,
          class: "mt-2 flex items-center gap-3 px-4 py-2 text-sm text-secondary hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors w-full text-left" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        <span>Sign Out</span>
      <% end %>
    </div>
  </aside>
</div>
