<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-8 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">All Trades</h1>
      <p class="mt-2 text-gray-600">Track and analyze your trading performance</p>
    </div>
    <%= link_to "Add New Trade", new_trade_path, class: "bg-orange-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-orange-700" %>
  </div>

  <!-- Trades Table -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <% if @trades.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Security</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Entry Price</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Exit Price</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">P&L</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Entry Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @trades.each do |trade| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= trade.security&.company_name || "N/A" %>
                    <div class="text-xs text-gray-500"><%= trade.security&.symbol %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <span class="<%= trade.trade_type == 'buy' ? 'text-green-600' : 'text-red-600' %>">
                      <%= trade.trade_type.upcase %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= number_with_delimiter(trade.quantity) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    â‚¹<%= number_with_delimiter(trade.entry_price) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if trade.exit_price.present? %>
                      â‚¹<%= number_with_delimiter(trade.exit_price) %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                          <%= trade.status == 'open' ? 'bg-yellow-100 text-yellow-800' :
                              trade.status == 'closed' ? 'bg-green-100 text-green-800' :
                              'bg-blue-100 text-blue-800' %>">
                      <%= trade.status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <% if trade.closed? && trade.net_pnl.present? %>
                      <span class="<%= trade.net_pnl >= 0 ? 'text-green-600' : 'text-red-600' %>">
                        <%= trade.formatted_pnl %>
                      </span>
                    <% elsif trade.open? %>
                      <span class="<%= trade.unrealized_pnl >= 0 ? 'text-green-600' : 'text-red-600' %>">
                        <%= trade.formatted_unrealized_pnl %>
                      </span>
                    <% else %>
                      <span class="text-gray-500">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= trade.entry_date.strftime("%d %b %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <%= link_to "View", trade_path(trade), class: "text-orange-600 hover:text-orange-700" %>
                    <%= link_to "Edit", edit_trade_path(trade), class: "text-blue-600 hover:text-blue-700" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination would go here if using pagy -->
        <div class="mt-4 text-sm text-gray-500">
          Showing <%= @trades.count %> trades
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">ðŸ“Š</div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No trades yet</h3>
          <p class="text-gray-500 mb-6">Start building your trading journal by adding your first trade.</p>
          <%= link_to "Add Your First Trade", new_trade_path, class: "bg-orange-600 text-white px-6 py-3 rounded-md text-sm font-medium hover:bg-orange-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>