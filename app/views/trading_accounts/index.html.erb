<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-8 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Trading Accounts</h1>
      <p class="mt-2 text-gray-600">Manage your connected trading accounts and API integrations</p>
    </div>
    <%= link_to "Connect New Account", new_trading_account_path, class: "bg-orange-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-orange-700" %>
  </div>

  <!-- Trading Accounts Grid -->
  <% if @trading_accounts.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @trading_accounts.each do |account| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium text-gray-900"><%= account.account_name %></h3>
              <% if account.is_primary %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">Primary</span>
              <% end %>
            </div>

            <div class="space-y-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">Broker</dt>
                <dd class="text-sm text-gray-900"><%= account.broker_name %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Account Type</dt>
                <dd class="text-sm text-gray-900"><%= account.account_type.humanize %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                        <%= account.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= account.status.humanize %>
                  </span>
                </dd>
              </div>

              <% if account.last_synced_at %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Last Synced</dt>
                  <dd class="text-sm text-gray-900"><%= time_ago_in_words(account.last_synced_at) %> ago</dd>
                </div>
              <% end %>
            </div>

            <div class="mt-6 flex space-x-3">
              <%= link_to "View", trading_account_path(account), class: "text-orange-600 hover:text-orange-700 text-sm font-medium" %>
              <%= link_to "Edit", edit_trading_account_path(account), class: "text-blue-600 hover:text-blue-700 text-sm font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">üè¶</div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No trading accounts connected</h3>
      <p class="text-gray-500 mb-6">Connect your first trading account to start importing trades and tracking your portfolio.</p>
      <%= link_to "Connect Your First Account", new_trading_account_path, class: "bg-orange-600 text-white px-6 py-3 rounded-md text-sm font-medium hover:bg-orange-700" %>
    </div>
  <% end %>

  <!-- Back to Dashboard -->
  <div class="mt-8">
    <%= link_to "‚Üê Back to Dashboard", root_path, class: "text-orange-600 hover:text-orange-700 font-medium" %>
  </div>
</div>