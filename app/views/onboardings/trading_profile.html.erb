<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl w-full space-y-8">
    <!-- Progress Bar -->
    <div class="mb-8">
      <div class="flex justify-between items-center mb-2">
        <span class="text-sm font-medium text-gray-700">Step 2 of 4</span>
        <span class="text-sm text-gray-500"><%= @progress %>% Complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-orange-600 h-2 rounded-full transition-all duration-300" style="width: <%= @progress %>%"></div>
      </div>
    </div>

    <div>
      <div class="mx-auto h-12 w-12 flex items-center justify-center">
        <span class="text-4xl">ðŸ“Š</span>
      </div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Tell us about your trading
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        This helps us personalize your experience and provide relevant insights
      </p>
    </div>

    <%= form_with url: user_path(current_user), method: :patch, local: true, class: "mt-8" do |form| %>
      <%= hidden_field_tag :step_name, "trading_profile" %>

      <div class="bg-white rounded-lg shadow-md p-8 space-y-6">
        <!-- Trading Style -->
        <div>
          <label class="block text-sm font-medium text-gray-900 mb-3">
            What's your primary trading style?
          </label>
          <div class="space-y-3">
            <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-50 transition <%= @trading_style == 'day' ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
              <%= radio_button_tag 'step_data[trading_style]', 'day', @trading_style == 'day', class: "h-4 w-4 text-orange-600 focus:ring-orange-500" %>
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Day Trading</span>
                <span class="block text-sm text-gray-500">Open and close positions within the same day</span>
              </div>
            </label>

            <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-50 transition <%= @trading_style == 'swing' ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
              <%= radio_button_tag 'step_data[trading_style]', 'swing', @trading_style == 'swing', class: "h-4 w-4 text-orange-600 focus:ring-orange-500" %>
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Swing Trading</span>
                <span class="block text-sm text-gray-500">Hold positions for several days to weeks</span>
              </div>
            </label>

            <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-50 transition <%= @trading_style == 'position' ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
              <%= radio_button_tag 'step_data[trading_style]', 'position', @trading_style == 'position', class: "h-4 w-4 text-orange-600 focus:ring-orange-500" %>
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Position/Long-term</span>
                <span class="block text-sm text-gray-500">Hold positions for months to years</span>
              </div>
            </label>
          </div>
        </div>

        <!-- Risk Tolerance -->
        <div>
          <label class="block text-sm font-medium text-gray-900 mb-3">
            What's your risk tolerance?
          </label>
          <div class="space-y-3">
            <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-50 transition <%= @risk_tolerance == 'conservative' ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
              <%= radio_button_tag 'step_data[risk_tolerance]', 'conservative', @risk_tolerance == 'conservative', class: "h-4 w-4 text-orange-600 focus:ring-orange-500" %>
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Conservative</span>
                <span class="block text-sm text-gray-500">Prefer lower risk, steady returns</span>
              </div>
            </label>

            <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-50 transition <%= @risk_tolerance == 'moderate' ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
              <%= radio_button_tag 'step_data[risk_tolerance]', 'moderate', @risk_tolerance == 'moderate', class: "h-4 w-4 text-orange-600 focus:ring-orange-500" %>
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Moderate</span>
                <span class="block text-sm text-gray-500">Balanced approach to risk and reward</span>
              </div>
            </label>

            <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-50 transition <%= @risk_tolerance == 'aggressive' ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
              <%= radio_button_tag 'step_data[risk_tolerance]', 'aggressive', @risk_tolerance == 'aggressive', class: "h-4 w-4 text-orange-600 focus:ring-orange-500" %>
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Aggressive</span>
                <span class="block text-sm text-gray-500">Accept higher risk for potential higher returns</span>
              </div>
            </label>
          </div>
        </div>

        <!-- Primary Goal -->
        <div>
          <label class="block text-sm font-medium text-gray-900 mb-3">
            What's your primary goal?
          </label>
          <div class="space-y-3">
            <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-50 transition <%= @primary_goal == 'income' ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
              <%= radio_button_tag 'step_data[primary_goal]', 'income', @primary_goal == 'income', class: "h-4 w-4 text-orange-600 focus:ring-orange-500" %>
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Generate Income</span>
                <span class="block text-sm text-gray-500">Regular profits to supplement income</span>
              </div>
            </label>

            <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-50 transition <%= @primary_goal == 'growth' ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
              <%= radio_button_tag 'step_data[primary_goal]', 'growth', @primary_goal == 'growth', class: "h-4 w-4 text-orange-600 focus:ring-orange-500" %>
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Long-term Growth</span>
                <span class="block text-sm text-gray-500">Build wealth over time</span>
              </div>
            </label>

            <label class="flex items-center p-4 border-2 rounded-lg cursor-pointer hover:bg-gray-50 transition <%= @primary_goal == 'learning' ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
              <%= radio_button_tag 'step_data[primary_goal]', 'learning', @primary_goal == 'learning', class: "h-4 w-4 text-orange-600 focus:ring-orange-500" %>
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Learning & Skill Building</span>
                <span class="block text-sm text-gray-500">Develop trading skills and strategies</span>
              </div>
            </label>
          </div>
        </div>

        <div class="pt-4">
          <%= form.submit "Continue â†’", class: "w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
        </div>

        <div class="text-center">
          <%= link_to "â† Back", onboarding_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
